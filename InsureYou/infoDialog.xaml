<Window x:Class="InsureYou.infoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InsureYou"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="infoDialog" Height="250" Width="250"
        WindowStartupLocation="CenterScreen"  WindowStyle="None">
    <Window.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFBF1212" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>
    <StackPanel>
        <materialDesign:PackIcon Kind="InfoOutline" HorizontalAlignment="Right" Foreground="Blue" Width="50" Height="50" />
        <TextBlock x:Name="title" Text="Title" HorizontalAlignment="Center" FontSize="18" FontFamily="Century Gothic" Margin="20 0 20 10"/>

        <TextBlock x:Name="content" Text="Content" Margin="10 0" FontFamily="Century Gothic" FontSize="12" TextWrapping="WrapWithOverflow"/>
        <Button Click="Button_Click" Content="OK" VerticalAlignment="Bottom" Margin="70 50 70 0" />
    </StackPanel>
</Window>
